<!DOCTYPE html>
<html>
<head>
<title><%= Rails.application.config.present.company_name %> - Present</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= query_diet_widget if Rails.env.development? && ENV['PROFILE'] %>
  <div class="top">
    <% if @impersonated_user.present? %>
      <div class="top-alert alert-info" role="alert">
        Impersonating <%= @impersonated_user.name %>
        (<%= link_to "Change", impersonations_path %>)
      </div>
    <% end %>
    <%= yield :top %>
  </div>

  <div class="container">
    <% if @current_user.present? %>
      <div class="text-right">
        <small>Welcome, <%= @current_user.name %>!</small>
      </div>
    <% end %>
    <% flash.each do |(mode, messages)| %>
      <% if messages.present? %>
        <div class="alert alert-<%= css_class_for_flash_key(mode) %> fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
          <% Array.wrap(messages).each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <%= yield %>
    <footer class="text-center">
      <% if @current_user.present? %>
        <%= link_to "Home", root_path %>
        | <%= link_to "Agent Roster", agents_path %>
        | <%= link_to "Pairing", accidental_pairings_path %>
        | <%= link_to "Internal Notes", internal_notes_path %>
        | <%= link_to "Agent Assignments", dossiers_path %>
        <% if @current_user.admin? %>
          | <%= link_to "New Invoice", new_invoice_path %>
          | <%= link_to "Invoices Waiting for Submission", todo_invoices_path %>
          | <%= link_to "Clients", clients_path %>
          | <%= link_to "Projects", projects_path %>
          | <%= link_to "Reports", new_report_path %>
          | <%= link_to "Impersonate User", impersonations_path %>
        <% end %>
        | <%= link_to "Logout", logout_path %>
      <% end %>

    </footer>
  </div>
</body>
</html>
